<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark shadow (bottom-right) -->
    <item android:top="0dp" android:left="0dp" android:right="9dp" android:bottom="9dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="@color/neumorphic_shadow_dark" />
        </shape>
    </item>
    <!-- Light shadow (top-left) -->
    <item android:top="9dp" android:left="9dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="@color/neumorphic_shadow_light" />
        </shape>
    </item>
    <!-- Main surface -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="@color/neumorphic_background" />
        </shape>
    </item>
</layer-list>