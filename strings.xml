<!-- AndroidManifest.xml -->  <?xml version="1.0" encoding="utf-8"?>  <manifest xmlns:android="http://schemas.android.com/apk/res/android"  
package="com.yourpackage.emulator3ds">

<!-- Permissions for emulator -->  
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />  
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />  
<uses-permission android:name="android.permission.VIBRATE" />  
<uses-permission android:name="android.permission.RECORD_AUDIO" />  
  
<!-- OpenGL ES 3.0 requirement for graphics -->  
<uses-feature  
    android:glEsVersion="0x00030000"  
    android:required="false" />  
  
<!-- Hardware features -->  
<uses-feature  
    android:name="android.hardware.touchscreen"  
    android:required="true" />  
  
<application  
    android:allowBackup="true"  
    android:icon="@mipmap/ic_launcher"  
    android:label="@string/app_name"  
    android:theme="@style/AppTheme"  
    android:hardwareAccelerated="true"  
    android:largeHeap="true">  
      
    <!-- Main emulator activity -->  
    <activity  
        android:name=".MainActivity"  
        android:exported="true"  
        android:screenOrientation="landscape"  
        android:configChanges="orientation|keyboardHidden|screenSize"  
        android:theme="@style/AppTheme.Fullscreen">  
        <intent-filter>  
            <action android:name="android.intent.action.MAIN" />  
            <category android:name="android.intent.category.LAUNCHER" />  
        </intent-filter>  
    </activity>  
      
    <!-- Settings activity with neumorphic UI -->  
    <activity  
        android:name=".SettingsActivity"  
        android:exported="false"  
        android:label="@string/settings_title"  
        android:parentActivityName=".MainActivity"  
        android:theme="@style/AppTheme">  
        <meta-data  
            android:name="android.support.PARENT_ACTIVITY"  
            android:value=".MainActivity" />  
    </activity>  
      
</application>

</manifest>  <!-- app/build.gradle -->  apply plugin: 'com.android.application'

android {
compileSdkVersion 34
buildToolsVersion "34.0.0"

defaultConfig {  
    applicationId "com.yourpackage.emulator3ds"  
    minSdkVersion 21  
    targetSdkVersion 34  
    versionCode 1  
    versionName "1.0"  
      
    testInstrumentationRunner "androidx.test.runner.AndroidJUnitRunner"  
      
    // Enable vector drawable support  
    vectorDrawables.useSupportLibrary = true  
      
    // Native library support (if you have C++ emulator core)  
    externalNativeBuild {  
        cmake {  
            cppFlags "-std=c++17 -frtti -fexceptions"  
            abiFilters "arm64-v8a", "armeabi-v7a", "x86", "x86_64"  
        }  
    }  
}  
  
buildTypes {  
    release {  
        minifyEnabled false  
        proguardFiles getDefaultProguardFile('proguard-android-optimize.txt'), 'proguard-rules.pro'  
        debuggable false  
    }  
    debug {  
        debuggable true  
        jniDebuggable true  
    }  
}  
  
compileOptions {  
    sourceCompatibility JavaVersion.VERSION_1_8  
    targetCompatibility JavaVersion.VERSION_1_8  
}  
  
// If you have native code (C++ emulator core)  
externalNativeBuild {  
    cmake {  
        path "CMakeLists.txt"  
    }  
}  
  
// Enable data binding for easier UI management  
dataBinding {  
    enabled = true  
}  
  
// Packaging options  
packagingOptions {  
    exclude 'META-INF/DEPENDENCIES'  
    exclude 'META-INF/LICENSE'  
    exclude 'META-INF/LICENSE.txt'  
    exclude 'META-INF/NOTICE'  
    exclude 'META-INF/NOTICE.txt'  
}

}

dependencies {
// AndroidX libraries
implementation 'androidx.appcompat:appcompat:1.6.1'
implementation 'androidx.constraintlayout:constraintlayout:2.1.4'
implementation 'androidx.recyclerview:recyclerview:1.3.0'
implementation 'androidx.cardview:cardview:1.0.0'
implementation 'androidx.preference:preference:1.2.0'

// Material Design Components  
implementation 'com.google.android.material:material:1.9.0'  
  
// Lifecycle components  
implementation 'androidx.lifecycle:lifecycle-extensions:2.2.0'  
implementation 'androidx.lifecycle:lifecycle-viewmodel:2.6.1'  
  
// File picker for ROM selection  
implementation 'com.github.dhaval2404:imagepicker:2.1'  
  
// OpenGL utilities  
implementation 'androidx.opengl:opengl:1.0.0'  
  
// Testing  
testImplementation 'junit:junit:4.13.2'  
androidTestImplementation 'androidx.test.ext:junit:1.1.5'  
androidTestImplementation 'androidx.test.espresso:espresso-core:3.5.1'

}

<!-- res/values/styles.xml -->  <?xml version="1.0" encoding="utf-8"?>  <resources>  <!-- Base application theme -->  
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">  
    <item name="colorPrimary">@color/neumorphic_background</item>  
    <item name="colorPrimaryDark">@color/neumorphic_shadow_dark</item>  
    <item name="colorAccent">@color/neumorphic_accent_start</item>  
    <item name="android:windowBackground">@color/neumorphic_background</item>  
    <item name="android:textColorPrimary">@color/neumorphic_text_primary</item>  
    <item name="android:textColorSecondary">@color/neumorphic_text_secondary</item>  
    <item name="android:statusBarColor">@color/neumorphic_background</item>  
    <item name="android:windowLightStatusBar">true</item>  
</style>  
  
<!-- Fullscreen theme for emulator -->  
<style name="AppTheme.Fullscreen" parent="AppTheme">  
    <item name="android:windowFullscreen">true</item>  
    <item name="android:windowContentOverlay">@null</item>  
    <item name="android:windowNoTitle">true</item>  
</style>  
  
<!-- Neumorphic specific styles -->  
<style name="NeumorphicCard">  
    <item name="cardCornerRadius">15dp</item>  
    <item name="cardElevation">0dp</item>  
    <item name="android:background">@drawable/neumorphic_raised</item>  
    <item name="cardBackgroundColor">@android:color/transparent</item>  
</style>  
  
<style name="NeumorphicText.Title">  
    <item name="android:textSize">16sp</item>  
    <item name="android:textColor">@color/neumorphic_text_primary</item>  
    <item name="android:textStyle">bold</item>  
</style>  
  
<style name="NeumorphicText.Subtitle">  
    <item name="android:textSize">13sp</item>  
    <item name="android:textColor">@color/neumorphic_text_secondary</item>  
    <item name="android:lineSpacingMultiplier">1.4</item>  
</style>  
  
<style name="NeumorphicText.SectionHeader">  
    <item name="android:textSize">16sp</item>  
    <item name="android:textColor">@color/neumorphic_text_primary</item>  
    <item name="android:textStyle">bold</item>  
    <item name="android:layout_marginBottom">15dp</item>  
    <item name="android:layout_marginStart">10dp</item>  
</style>

