<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="15dp" />
                    <solid android:color="@color/neumorphic_background" />
                </shape>
            </item>
            <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="12dp" />
                    <solid android:color="@color/neumorphic_background" />
                    <stroke android:width="1dp" android:color="@color/neumorphic_shadow_dark" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Dark shadow -->
            <item android:top="0dp" android:left="0dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <corners android:radius="15dp" />
                    <solid android:color="@color/neumorphic_shadow_dark" />
                </shape>
            </item>
            <!-- Light shadow -->
            <item android:top="6dp" android:left="6dp" android:right="0dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <corners android:radius="15dp" />
                    <solid android:color="@color/neumorphic_shadow_light" />
                </shape>
            </item>
            <!-- Main surface -->
            <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="15dp" />
                    <solid android:color="@color/neumorphic_background" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>